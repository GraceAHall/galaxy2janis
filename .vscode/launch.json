    "version": "0.2.0",
    "configurations": [
        {
            "name": "rip galaxy types",
            "type": "python",
            "request": "launch",
            "program": "galaxy_types/parse_galaxy_types.py",
            "console": "integratedTerminal",
            "args": [
                "galaxy_types", "datatypes_conf.xml.sample"
            ]
        },
        {
            "name": "report tool parsing errors",
            "type": "python",
            "request": "launch",
            "program": "src/parsing_manager.py",
            "console": "integratedTerminal",
            "args": [
                "tools/", "parsed_tools/"
            ]
        },
        {
            "name": "quast",
            "type": "python",
            "request": "launch",
            "program": "src/gxtool2janis.py",
            "console": "integratedTerminal",
            "args": [
                "quast.xml", "tools/quast/", 
                "--outdir", "parsed",
                "--wflow", "test/test-data/assembly_qc.ga", 
                "--wstep", "3", 
                "--debug"
            ]
        },
    
        {
            "name": "parse tools",
            "type": "python",
            "request": "launch",
            "program": "src/parsing_manager.py",
            "console": "integratedTerminal",
            "args": [
                "tools", "parsed_tools"
            ]
        }
    ]
}