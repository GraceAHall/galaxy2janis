    "version": "0.2.0",
    "configurations": [
        {
            "name": "rip galaxy types",
            "type": "python",
            "request": "launch",
            "program": "galaxy_types/parse_galaxy_types.py",
            "console": "integratedTerminal",
            "args": [
                "galaxy_types", "datatypes_conf.xml.sample"
            ]
        },
        {
            "name": "report tool parsing errors",
            "type": "python",
            "request": "launch",
            "program": "src/parsing_manager.py",
            "console": "integratedTerminal",
            "args": [
                "tools/", "parsed_tools/"
            ]
        },
        {
            "name": "abricate",
            "type": "python",
            "request": "launch",
            "program": "src/gxtool2janis.py",
            "console": "integratedTerminal",
            "args": [
                "tool",
                "--dir", "test/data/abricate", 
                "--xml", "abricate.xml",
            ]
        },
        {
            "name": "fastqc",
            "type": "python",
            "request": "launch",
            "program": "src/gxtool2janis.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "tool",
                "--dir", "test/data/fastqc", 
                "--xml", "rgFastQC.xml",
            ]
        },
        {
            "name": "multiqc",
            "type": "python",
            "request": "launch",
            "program": "src/gxtool2janis.py",
            "console": "integratedTerminal",
            "args": [
                "tool",
                "--dir", "test/data/multiqc", 
                "--xml", "multiqc.xml",
            ]
        },
        {
            "name": "simple workflow",
            "type": "python",
            "request": "launch",
            "program": "src/gxtool2janis.py",
            "console": "integratedTerminal",
            "args": [
                "workflow",
                "test/data/simple_workflow.ga"
            ]
        },
        
    ]
}